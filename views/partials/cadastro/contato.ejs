<md-toolbar
  layout="row" 
  class="md-toolbar-tools">

  <md-button 
    aria-label="button-label" 
    class="md-icon-button"
    ng-click="cadastroCtrl.voltar()">
    
    <md-icon md-font-set="material-icons">arrow_back</md-icon>
  </md-button>
    
  <h1
    class="md-title"
    flex
    md-truncate>Cadastro</h1>
</md-toolbar>

<md-content 
  layout="column" 
  class="md-no-flicker md-no-momentum"
  layout-padding="true">

  <p class="md-title">Endereço</p>

  <form
    name="address_form"
    layout="column">

    <md-input-container>
      <label for="estado">UF</label>
      <md-select
        id="estado"
        ng-model="cadastroCtrl.endereco.estado"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3">

        <md-option
          ng-repeat="estado in cadastroCtrl.estados"
          ng-value="estado.sigla"
          ng-bind="estado.nome"></md-option>
      </md-select>
    </md-input-container>

    <md-input-container>
      <label for="cidade">Cidade</label>
      <input
        id="cidade" 
        type="text"
        maxlength="45"
        ng-model="cadastroCtrl.endereco.cidade"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3" />
    </md-input-container>

    <md-input-container>
      <label for="bairro">Bairro</label>
      <input
        id="bairro" 
        type="text"
        maxlength="45"
        ng-model="cadastroCtrl.endereco.bairro"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3" />
    </md-input-container>

    <md-input-container>
      <label for="street">Logradouro</label>
      <input
        id="street" 
        type="text"
        maxlength="45"
        ng-model="cadastroCtrl.endereco.logradouro"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3" />
    </md-input-container>

    <md-input-container>
      <label for="addr_num">Número</label>
      <input
        id="addr_num" 
        type="number"
        ng-model="cadastroCtrl.endereco.numero"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3" />
    </md-input-container>

    <md-input-container>
      <label for="complement">Complemento</label>
      <input
        id="complement" 
        type="text"
        maxlength="45"
        ng-model="cadastroCtrl.endereco.complemento"
        ng-disabled="cadastroCtrl.step === 3" />
    </md-input-container>

    <md-input-container>
      <label for="cep">CEP</label>
      <input
        id="cep" 
        type="text"
        maxlength="8"
        ng-model="cadastroCtrl.endereco.cep"
        ng-pattern="cadastroCtrl.cepPattern"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3" />
    </md-input-container>
  </form>

  <p class="md-title">Telefone</p>
  <form
    name="telephone_form"
    layout="column">

    <md-input-container>
      <label for="type">Tipo</label>
      <md-select
        id="type"
        ng-model="cadastroCtrl.telefone.Tipo"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3">

        <md-option ng-value="1">Fixo</md-option>
        <md-option ng-value="2">Celular</md-option>
      </md-select>
    </md-input-container>

    <md-input-container>
      <label for="ddd">DDD</label>
      <input
        id="ddd" 
        type="number"
        maxlength="2"
        max="99"
        ng-model="cadastroCtrl.telefone.ddd"
        ng-pattern="cadastroCtrl.dddPattern"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3" />
    </md-input-container>

    <md-input-container>
      <label for="number">Número</label>
      <input
        id="number" 
        type="number"
        maxlength="9"
        max="999999999"
        ng-model="cadastroCtrl.telefone.numero"
        ng-pattern="cadastroCtrl.telPattern"
        ng-required="true"
        ng-disabled="cadastroCtrl.step === 3" />
    </md-input-container>
  </form>

  <md-button
    class="md-primary md-raised"
    md-ripple-size="full"
    ng-disabled="address_form.$invalid || telephone_form.$invalid"
    ng-click="cadastroCtrl.avancar()">

    Continuar
  </md-button>

</md-content>