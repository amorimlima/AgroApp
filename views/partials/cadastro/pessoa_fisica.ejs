<md-toolbar
  layout="row" 
  class="md-toolbar-tools">

  <md-button 
    aria-label="button-label" 
    class="md-icon-button"
    ng-click="registerCtrl.goBack()">
    
    <md-icon md-font-set="material-icons">arrow_back</md-icon>
  </md-button>
    
  <h1
    class="md-title"
    flex
    md-truncate>Cadastro</h1>
</md-toolbar>
  
<md-content
  layout="column" 
  class="md-no-flicker md-no-momentum"
  layout-padding="true">

  <p class="md-title">Dados pessoais</p>

  <form 
    name="dados_pessoais_form"
    layout="column">
    <md-input-container class="md-block">
      <label for="cpf">CPF</label>
      <input
        id="cpf" 
        type="number"
        maxlength="11"
        max="99999999999"
        ng-model="registerCtrl.cpf"
        ng-pattern="registerCtrl.cpfPattern"
        ng-required="true" />
    </md-input-container>

    <md-input-container>
      <label for="rg">RG</label>
      <input
        id="rg" 
        type="text"
        maxlength="9"
        ng-model="registerCtrl.rg"
        ng-pattern="registerCtrl.rgPattern"
        ng-required="true" />
    </md-input-container>

    <md-input-container>
      <label for="nome">Nome</label>
      <input
        id="nome"
        type="text"
        maxlength="100"
        ng-model="registerCtrl.nome"
        ng-required="true" />

    </md-input-container>

    <md-input-container>
      <label for="sobrenome">Sobrenome</label>
      <input
        id="sobrenome" 
        type="text"
        maxlength="100"
        ng-model="registerCtrl.sobrenome"
        ng-required="true" />
    </md-input-container>

    <md-input-container>
      <label for="data_nascimento">Data de nascimento</label>
      <input
        id="data_nascimento" 
        type="date"
        ng-model="registerCtrl.data_nascimento"
        ng-required="true" />
    </md-input-container>
  </form>

  <md-button
    class="md-primary md-raised"
    md-ripple-size="full"
    ng-disabled="dados_pessoais_form.$invalid"
    ng-click="registerCtrl.goToContact()">

    Continuar
  </md-button>
</md-content>